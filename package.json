{
  "name": "@iits/vuex-mutex",
  "version": "1.0.0",
  "description": "Vuex plugin to serialize actions per namespace and deduplicate duplicate dispatches (mutex + dedupe).",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": ["dist", "README.md", "LICENSE"],
  "sideEffects": false,
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm,cjs --clean",
    "test": "vitest run",
    "prepublishOnly": "npm run build && npm test"
  },
  "engines": { "node": ">=18" },
  "peerDependencies": {
    "vuex": "^3.6.2 || ^4.0.2"
  },
  "dependencies": {
    "async-mutex": "^0.5.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.6.0",
    "tsup": "^8.0.0",
    "vitest": "^2.1.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iits-consulting/iits-vuex-mutex.git"
  },
  "bugs": { "url": "https://github.com/iits-consulting/iits-vuex-mutex/issues" },
  "homepage": "https://github.com/iits-consulting/iits-vuex-mutex#readme",
  "author": "IITS",
  "license": "MIT",
  "keywords": ["vuex", "mutex", "dedupe", "iits"]
}
